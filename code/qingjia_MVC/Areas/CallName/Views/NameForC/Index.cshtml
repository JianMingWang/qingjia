
@{
    ViewBag.Title = "晚点名名单";
    var F = Html.F();
}

@section body{
    <div id="namelist">
        <h3>请假名单</h3>
        <table>
            <tr>
                <th>请假学生：</th>
                <td>
                    @(F.TextArea()
                        .ID("taName")
                        .AutoGrowHeight(true)
                        .AutoGrowHeightMin(100)
                        .AutoGrowHeightMax(200)
                        .Text(ViewBag.taName)
                    )
                </td>
            </tr>
            <!--<tr>
                <th>导出晚点名名单到EXCEL</th>
                <td>
                    @(F.Button()
                        .ID("btnGet")
                        .Text("导出")
                        .Hidden(true)
                        .Listener("click", "onButtonClick")
                    )
                </td>
            </tr>-->
        </table>
    </div>

    @(F.SimpleForm()
            .ID("sfName")
            .BodyPadding(5)
                .ShowBorder(false)
                .ShowHeader(false)
            .IsViewPort(true)
            .ContentEl("#namelist")
    )
}

@section script{
    <script src="~/res/js/grid.js"></script>

    <script>

        function onButtonClick(event) {
                window.location.href = '@Url.Action("setNightNameList")';
        }

    </script>
}
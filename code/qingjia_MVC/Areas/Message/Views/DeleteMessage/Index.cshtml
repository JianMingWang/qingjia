
@{
    ViewBag.Title = "Index";
    var F = Html.F();
}

@section head{
    <style type="text/css">
        .delete_name_list{
            width:400px;
        }
        .delete_name_list th{
            width:100px;
            text-align:right;
        }
    </style>
}

@section body{
    <div class="delete_name_list">
        <h3>未销假名单</h3>
        <hr />
        <table>
            <tr>
                <th>短期请假：</th>
                <td>
                    @(F.Label()
                    .ID("lblShort")
                    )
                </td>
            </tr>
            <tr>
                <th>长期请假：</th>
                <td>
                    @(F.Label()
                    .ID("lblLong")
                    )
                </td>
            </tr>
            <tr>
                <th>晚点名请假：</th>
                <td>
                    @(F.Label()
                    .ID("lblNight")
                    )
                </td>
            </tr>
            <tr>
                <th>节假日请假:</th>
                <td>
                    @(F.Label()
                    .ID("lblVacation")
                    )
                </td>
            </tr>
        </table>
        <p>
            @(F.Button()
            .ID("btnSearch")
            .Text("查询")
            .OnClick(Url.Action("btnSearch_Click"))
            )
            &nbsp;
            @(F.Button()
            .ID("btnEmail")
            .Text("批量发送邮件")
            .OnClick(Url.Action("btnEmail_Click"))
            )
        </p>
    </div>
    
}


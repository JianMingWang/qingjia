@{
    ViewBag.Title = "晚点名通知";
    var F = Html.F();
}

@section head{
    <style type="text/css">
        .night_main{
            width:600px;
            margin:0 auto;
            text-align:center;
        }
        .night_main ul{
            list-style:none;
        }
        .night_main ul table tr th{
            text-align:right;
        }
        .night_main ul table tr td{
            text-align:left;
        }
    </style>
}

@section body{
    <div id="night_class" class="night_main">
        <div class="night_title">
            <p>
                @(F.Label()
                        .ID("lblNameAGrade")
                        .Text(ViewBag.lblNameAGrade)
                )
            </p>
            @(F.DatePicker()
                .ID("dpDate")
                .Required(true)
                .Width(300)
                .Label("点名日期")
                .EmptyText("请选择点名日期")
                .DateFormatString("yyyy-MM-dd")
                .SelectedDate(ViewBag.dpDate)
                .ShowRedStar(true)
                .EnableEdit(false)
            )
        </div>
        
        <ul>
            <li>
                <table>
                    <tr>
                        <th>第一批点名时间：</th>
                        <td>
                            @(F.TimePicker()
                                    .ID("tpFirst")
                                    .Required(true)
                                    .Increment(30)
                                    .MinTimeText("9:00")
                                    .MaxTimeText("21:00")
                                    .EnableEdit(false)
                                    .Text(ViewBag.tpFirst)
                                    .EmptyText("请选择时间")
                                    .Label("第一批时间")
                                    .ShowRedStar(true)
                                    .ShowLabel(false)
                                    
                            )
                        </td>
                    </tr>
                    <tr>
                        <th>班级：</th>
                        <td>
                            @(F.CheckBoxList()
                                .ID("cblFirst")
                                .ColumnVertical(false)
                                .ColumnNumber(3)
                                .Width(400)
                                .DataTextField("Name")
                                .DataValueField("ID")
                                .SelectedValueArray(ViewBag.selected_first)
                                .DataSource(ViewBag.cblClasses)
                                .OnSelectedIndexChanged(Url.Action("cbl_SelectedIndexChanged"),
                                        new Parameter("one", "getCheckBoxListSelected('cblFirst')"),
                                        new Parameter("two", "getCheckBoxListSelected('cblSecond')"),
                                        new Parameter("three", "getCheckBoxListSelected('cblThird')"),
                                        new Parameter("index", "1")
                                )
                            )
                        </td>
                    </tr>
                </table>
            </li>
            <li>
                <table>
                    <tr>
                        <th>第二批点名时间：</th>
                        <td>
                            @(F.TimePicker()
                                    .ID("tpSecond")
                                    .Required(true)
                                    .Increment(30)
                                    .MinTimeText("9:00")
                                    .MaxTimeText("21:00")
                                    .CompareControl("tpFirst")
                                    .CompareOperator(Operator.GreaterThan)
                                    .CompareMessage("第二批点名时间应晚于第一批")
                                    .EnableEdit(false)
                                    .Text(ViewBag.tpSecond)
                                    .EmptyText("请选择时间")
                                    .Label("第二批时间")
                                    .ShowRedStar(true)
                                    .ShowLabel(false)
                            )
                        </td>
                    </tr>
                    <tr>
                        <th>班级：</th>
                        <td>
                            @(F.CheckBoxList()
                                .ID("cblSecond")
                                .ColumnVertical(false)
                                .ColumnNumber(3)
                                .Width(400)
                                .DataTextField("Name")
                                .DataValueField("ID")
                                .DataSource(ViewBag.cblClasses)
                                .SelectedValueArray(ViewBag.selected_second)
                                .OnSelectedIndexChanged(Url.Action("cbl_SelectedIndexChanged"),
                                        new Parameter("one", "getCheckBoxListSelected('cblSecond')"),
                                        new Parameter("two", "getCheckBoxListSelected('cblFirst')"),
                                        new Parameter("three", "getCheckBoxListSelected('cblThird')"),
                                        new Parameter("index","2")
                                )
                            )
                        </td>
                    </tr>
                </table>
            </li>
            <li>
                <table>
                    <tr>
                        <th>第三批点名时间：</th>
                        <td>
                            @(F.TimePicker()
                                    .ID("tpThird")
                                    .Increment(30)
                                    .MinTimeText("9:00")
                                    .MaxTimeText("21:00")
                                    .CompareControl("tpSecond")
                                    .CompareOperator(Operator.GreaterThan)
                                    .CompareMessage("第三批点名时间应晚于第二批")
                                    .EnableEdit(false)
                                    .Text(ViewBag.tpThird)
                                    .EmptyText("请选择时间")
                                    .Label("第三批时间")
                                    .ShowRedStar(true)
                                    .ShowLabel(false)
                            )
                        </td>
                    </tr>
                    <tr>
                        <th>班级：</th>
                        <td>
                            @(F.CheckBoxList()
                                .ID("cblThird")
                                .ColumnVertical(false)
                                .ColumnNumber(3)
                                .Width(400)
                                .DataTextField("Name")
                                .DataValueField("ID")
                                .DataSource(ViewBag.cblClasses)
                                .SelectedValueArray(ViewBag.selected_thrid)
                                .OnSelectedIndexChanged(Url.Action("cbl_SelectedIndexChanged"),
                                        new Parameter("one", "getCheckBoxListSelected('cblThird')"),
                                        new Parameter("two", "getCheckBoxListSelected('cblSecond')"),
                                        new Parameter("three", "getCheckBoxListSelected('cblFirst')"),
                                        new Parameter("index", "3")
                                )
                            )
                        </td>
                    </tr>
                </table>
            </li>
        </ul>
        @(F.Button()
            .ID("btnSubmit")
            .Text("提交")
            .ValidateForms("sfNight")
            .OnClick(Url.Action("btnSubmit_Click"),
                "sfNight",
                new Parameter("first", "getCheckBoxListSelected('cblFirst')"),
                new Parameter("second", "getCheckBoxListSelected('cblSecond')"),
                new Parameter("third", "getCheckBoxListSelected('cblThird')")
            )
        )
    </div>

    @(F.SimpleForm()
            .ID("sfNight")
            .BodyPadding(5)
            .ShowBorder(false)
            .ShowHeader(false)
            .ContentEl("#night_class")
    )
}

@section script{
    <script type="text/javascript">
        
        function getCheckBoxListSelected(cblID) {
            var list = F.ui[cblID];

            var result = [];
            $.each(list.items, function (index, item) {
                if (item.isChecked()) {
                    result.push({
                        'Name': item.getInputLabel(),
                        'ID': item.getInputValue()
                    });
                }
            });

            return result;
        }
    </script>
}
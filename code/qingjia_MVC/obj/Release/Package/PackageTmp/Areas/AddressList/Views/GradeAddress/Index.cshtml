@model IEnumerable<qingjia_MVC.Models.T_Student>

@{
    ViewBag.Title = "年级通讯录";
    var F = Html.F();
}
@section body{

    @(F.Grid()
        .EnableCollapse(true)
        .ShowHeader(true)
        .ShowBorder(true)
        .Title("通讯录")
        .ID("gridClassAddress")
        .IsViewPort(true)
        .DataIDField("ID")
        .DataTextField("Name")
        .AllowPaging(true)
        .PageSize(20)
        .Toolbars(
            F.Toolbar()
                .Items(
                    F.TwinTriggerBox()
                        .ID("ttbSearchName")
                        .Width(150)
                        .EmptyText("搜索姓名")
                        .Trigger1Icon(TriggerIcon.Clear)
                        .Trigger2Icon(TriggerIcon.Search)
                        .ShowTrigger1(false)
                        .OnTrigger1Click(Url.Action("ttbSearchName_Trigger1Click"))
                        .OnTrigger2Click(Url.Action("ttbSearchName_Trigger2Click"),
                                new Parameter("name", "F.ui.ttbSearchName.getValue()"),
                                new Parameter("fields", "F.ui.gridClassAddress.fields")
                        ),
                    F.ToolbarSeparator(),
                    F.TwinTriggerBox()
                        .ID("ttbSearchID")
                        .Width(150)
                        .EmptyText("搜索学号")
                        .Trigger1Icon(TriggerIcon.Clear)
                        .Trigger2Icon(TriggerIcon.Search)
                        .ShowTrigger1(false)
                        .OnTrigger1Click(Url.Action("ttbSearchID_Trigger1Click"))
                        .OnTrigger2Click(Url.Action("ttbSearchID_Trigger2Click"),
                                new Parameter("id", "F.ui.ttbSearchID.getValue()"),
                                new Parameter("fields", "F.ui.gridClassAddress.fields")
                        ),
                    F.ToolbarSeparator(),
                    F.DropDownList()
                        .ID("ddlSearchClass")
                        .Width(150)
                        .AutoSelectFirstItem(false)
                        .EmptyText("请选择班级")
                        .OnSelectedIndexChanged(Url.Action("ddlSearchClass_SelectedIndexChanged"), "ddlSearchClass",
                                new Parameter("fields", "F.ui.gridClassAddress.fields")
                        )
                        .DataTextField("Name")
                        .DataValueField("ID")
                        .DataSource(ViewBag.ddlSearchClass_DataSource)

                )
            )
        .Columns(
            F.RowNumberField(),
            F.RenderField()
                .HeaderText("学号")
                .HeaderTextAlign(TextAlign.Center)
                .DataField("ID")
                .Width(120),
            F.RenderField()
                .HeaderText("姓名")
                .HeaderTextAlign(TextAlign.Center)
                .DataField("Name")
                .Width(80),
            F.RenderField()
                .HeaderText("班级")
                .HeaderTextAlign(TextAlign.Center)
                .DataField("ClassName")
                .Width(120),
            F.RenderField()
                .HeaderText("性别")
                .HeaderTextAlign(TextAlign.Center)
                .DataField("Sex")
                .Width(80),
            F.RenderField()
                .HeaderText("宿舍")
                .HeaderTextAlign(TextAlign.Center)
                .DataField("Room")
                .Width(80),
            F.RenderField()
                .HeaderText("手机")
                .HeaderTextAlign(TextAlign.Center)
                .DataField("Tel")
                .Width(120),
            F.RenderField()
                .HeaderText("邮箱")
                .HeaderTextAlign(TextAlign.Center)
                .DataField("Email")
                .Width(180),
            F.RenderField()
                .HeaderText("QQ")
                .HeaderTextAlign(TextAlign.Center)
                .DataField("QQ")
                .Width(120)
        )
        .DataSource(Model)
    )
}


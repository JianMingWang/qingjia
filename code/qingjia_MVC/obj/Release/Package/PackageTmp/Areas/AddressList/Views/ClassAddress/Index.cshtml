@model IEnumerable<qingjia_MVC.Models.T_Student>

@{
    ViewBag.Title = "班级通讯录";
    var F = Html.F();
}
@section body{

    @(F.Grid()
        .EnableCollapse(true)
        .ShowHeader(true)
        .ShowBorder(true) 
        .IsViewPort(true)
        .Title("通讯录")
        .ID("gridClassAddress")
        .DataIDField("ID")
        .DataTextField("Name")
        .AllowPaging(true)
        .PageSize(20)
        .Columns(
            F.RowNumberField(),
            F.RenderField()
                .HeaderText("学号")
                .DataField("ID")
                .Width(120),
            F.RenderField()
                .HeaderText("姓名")
                .DataField("Name")
                .Width(80),
            F.RenderField()
                .HeaderText("性别")
                .DataField("Sex")
                .Width(80),
            F.RenderField()
                .HeaderText("宿舍")
                .DataField("Room")
                .Width(80),
            F.RenderField()
                .HeaderText("手机")
                .DataField("Tel")
                .Width(120),
            F.RenderField()
                .HeaderText("邮箱")
                .DataField("Email")
                .Width(150),
            F.RenderField()
                .HeaderText("QQ")
                .DataField("QQ")
                .Width(120)
        )
        .DataSource(Model)
    )
}




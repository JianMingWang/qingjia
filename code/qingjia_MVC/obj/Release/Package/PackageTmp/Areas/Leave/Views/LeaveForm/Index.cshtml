@{
    ViewBag.Title = "TabStrip/TabStrip";
    var F = @Html.F();
}

@section head{
<style>
    .f-panel.mypanel {
        text-align: center;
        padding-top: 10px;
        margin-top: 10px;
        border-top: solid 1px #ccc;
    }

        .f-panel.mypanel .myimage {
            display: inline-block;
            *display: inline;
            margin-right: 10px;
        }
</style>

}

@section body {

    @(F.TabStrip()
        .ID("TabStrip1")
        .IsViewPort(true)
        //.Width(1500)
        //.Height(850)
        .ShowBorder(true)
        .AutoScroll(true)
        .TabPosition(TabPosition.Top)
        .EnableTabCloseMenu(false)
        .ActiveTabIndex(0)
        .Tabs(
            F.Tab()
                .Title("离校请假")
                .BodyPadding(5)
                .Items(
                    F.Panel()
                    .ShowHeader(false)
                    .ShowBorder(false)
                    .CssClass("mypanel")
                    .Items(
                            F.Image()
                                .ID("leave_flow")
                                .ShowLabel(true)
                                .CssClass("myimage")
                                .ImageCssStyle("border:solid 1px #ccc;padding:5px;size:100% auto; margin_left:auto; margin_right:auto;")
                                .ImageUrl("~/res/images/qingjia/leave_flow.png")
                    )
                ),
            F.Tab()
                .Title("早晚自习请假")
                .BodyPadding(5)
                .Items(
                    F.Panel()
                    .ShowHeader(false)
                    .ShowBorder(false)
                    .Items(
                            F.Image()
                                .ID("leave_flow")
                                .ShowLabel(true)
                                .ImageCssStyle("border:solid 1px #ccc;padding:5px;size:100% auto; margin_left:auto; margin_right:auto;")
                                .ImageUrl("~/res/images/qingjia/study_flow.png")
                    )
                ),
            F.Tab()
                .Title("晚点名请假")
                .BodyPadding(5)
                .Items(
                    F.Panel()
                    .ShowHeader(false)
                    .ShowBorder(false)
                    .Items(
                            F.Image()
                                .ID("leave_flow")
                                .ShowLabel(true)
                                .ImageCssStyle("border:solid 1px #ccc;padding:5px;size:100% auto; margin_left:auto; margin_right:auto;")
                                .ImageUrl("~/res/images/qingjia/night_flow.png")
                    )
                ),
            F.Tab()
                .Title("上课请假备案")
                .BodyPadding(5)
                .Items(
                    F.Panel()
                    .ShowHeader(false)
                    .ShowBorder(false)
                    .Items(
                            F.Image()
                                .ID("leave_flow")
                                .ShowLabel(true)
                                .ImageCssStyle("border:solid 1px #ccc;padding:5px;size:100% auto; margin_left:auto; margin_right:auto;")
                                .ImageUrl("~/res/images/qingjia/class_flow.png")
                    )
                )
        )
    )


}